{% extends "sprout/forms/_layouts/formsettings" %}
{% import "_includes/forms" as forms %}
{% import "sprout/fields/_includes/forms" as sproutFields %}

{% set fullPageForm = true %}

{% set content %}

    <input type="hidden" name="action" value="sprout/forms/save-form">
    {{ redirectInput('sprout/forms/edit/'~form.id~'/settings/templates') }}
    <input type="hidden" id="formId" name="formId" value="{{ form.id }}">

    {% set templateOptions = sprout.forms.getTemplateOptions(form, true) %}

    {{ forms.field({
        label: "Templates"|t('sprout'),
        instructions: "The Form Templates that will be used to output your forms. Update the 'Default Form Templates' in the general settings."|t('sprout'),
        required: true,
        first: true,
        errors: (form is defined ? form.getErrors('formTemplateId') : null)
    }, sproutFields.selectOther({
        name: 'formTemplateId',
        options: templateOptions,
        value: form.formTemplateId ?? '',
        otherPlaceholderText: '_forms/formHandle'|t('sprout')
    })) }}

    {{ forms.selectField({
        label: 'Submission Method'|t('sprout'),
        instructions: 'The method used to submit your forms.'|t('sprout'),
        id: 'submissionMethod',
        name: 'submissionMethod',
        value: form.submissionMethod,
        options: [{
            value: "sync",
            label: "Reload Page (Synchronous)",
        },{
            value: "async",
            label: "AJAX (Asynchronous)",
        }]
    }) }}

    {{ forms.textField({
        label: "Submit Button"|t('sprout'),
        instructions: "The text displayed for the submit button."|t('sprout'),
        name: 'submitButtonText',
        placeholder: 'Submit',
        value: (form is defined ? form.submitButtonText : null),
        required: false,
        errors: (form is defined ? form.getErrors('submitButtonText') : null)
    }) }}

    {{ forms.textareaField({
        label: "Success Message"|t('sprout'),
        instructions: "The message displayed after a form entry is successfully submitted. Leave blank for no message."|t('sprout'),
        id: 'successMessage',
        name: 'successMessage',
        class: 'nicetext',
        rows: 5,
        placeholder: "Thanks! We'll be in touch."|t('sprout'),
        value: (form is defined ? form.successMessage : null),
        errors: (form is defined ? form.getErrors('successMessage') : null)
    }) }}

    {{ forms.textareaField({
        label: "Error Message"|t('sprout'),
        instructions: "The message displayed when a form submission has errors. This message will display above the error list if 'Globally' is selected as the Error Display Method. Leave blank for no message."|t('sprout'),
        id: 'errorMessage',
        name: 'errorMessage',
        class: 'nicetext',
        rows: 5,
        placeholder: "We were unable to process your submission. Please correct any errors and submit the form again."|t('sprout'),
        value: (form is defined ? form.errorMessage : null),
        errors: (form is defined ? form.getErrors('errorMessage') : null)
    }) }}

    {{ forms.selectField({
        label: 'Error Display Method'|t('sprout'),
        instructions: 'The method used to display errors after a form fails validation.'|t('sprout'),
        id: 'errorDisplayMethod',
        name: 'errorDisplayMethod',
        value: form.errorDisplayMethod,
        options: [{
            value: "inline",
            label: "Inline - Display errors alongside their respective fields",
        },{
            value: "global",
            label: "Globally - Display errors together in a list",
        },{
            value: "both",
            label: "Inline & Globally - Display errors everywhere!",
        }]
    }) }}

    <hr>

    {{ forms.lightswitchField({
        label: "Enable Captchas"|t('sprout'),
        instructions: "Enable or disable the global captchas for this specific form."|t('sprout'),
        id: 'enableCaptchas',
        name: 'enableCaptchas',
        on: form.enableCaptchas,
        onLabel: "Show"|t('sprout'),
        offLabel: "Hide"|t('sprout')
    }) }}

    {{ forms.lightswitchField({
        label: "Page Titles"|t('sprout'),
        instructions: "Display Page Titles on Forms"|t('sprout'),
        id: 'displaySectionTitles',
        name: 'displaySectionTitles',
        on: form.displaySectionTitles,
        onLabel: "Show"|t('sprout'),
        offLabel: "Hide"|t('sprout')
    }) }}

{% endset %}