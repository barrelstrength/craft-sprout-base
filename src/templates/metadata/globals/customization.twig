{% extends "sprout/metadata/_layouts/general" %}
{% import "_includes/forms" as forms %}
{% import "sprout/fields/_includes/forms" as sproutFields %}
{% import "sprout/metadata/_includes/sproutseo" as sproutMetaCp %}

{% do view.registerAssetBundle("barrelstrength\\sproutbase\\app\\metadata\\web\\assets\\seo\\SproutSeoAsset") %}

{% set settings         = globals.settings %}
{% set transformOptions = sprout.seo.getTransforms() %}

{% block content %}

    <form method="post" accept-charset="UTF-8" data-saveshortcut>
        {{ csrfInput() }}
        <input type="hidden" name="action" value="sprout/global-metadata/save-global-metadata">
        <input type="hidden" name="globalColumn" value="settings">
        <input type="hidden" name="siteId" value="{{ globals.siteId }}">

        {{ forms.autosuggestField({
            label: 'Character used between Title segments'|t('sprout') ~ sproutMetaCp.infoIcon({
                label: 'Character'|t('sprout'),
                search: true,
                priority: 'globals'
            }),
            instructions: 'This character will be used in between your meta title segments (i.e. Article Title – {siteName}). A dash is used by default.'|t('sprout', { 'siteName': siteName }),
            first: true,
            name: 'sproutseo[globals][settings][seoDivider]',
            suggestions: [
                {
                    label: 'Common Dividers'|t('sprout'),
                    data: [
                    { hint: 'Dash'|t('sprout'), name: '-' },
                    { hint: 'Bullet'|t('sprout'), name: '•' },
                    { hint: 'Pipe'|t('sprout'), name: '|' },
                    { hint: 'Forward Slash'|t('sprout'), name: '/' },
                    { hint: 'Colon'|t('sprout'), name: ':' }
                ]
                }
            ],
            value: settings.seoDivider ?? '-',
            placeholder: '-'|t('sprout')
        }) }}

        {{ forms.autosuggestField({
            label: 'Append value to all Meta Titles'|t('sprout') ~ sproutMetaCp.infoIcon({
                label: "Append value"|t('sprout'),
                search: true,
                priority: 'globals'
            }),
            instructions: 'Append the website name or a custom value at the end of all Meta Titles (i.e. Article Title - {actualSiteName}). Supports variables `{siteName}` and `{divider}`. Defaults to blank.'|t('sprout', { 'actualSiteName': siteName }),
            name: 'sproutseo[globals][settings][appendTitleValue]',
            suggestions: [
                {
                    label: 'Available Variables'|t('sprout'),
                    data: [
                    { hint: 'Site Name'|t('sprout'), name: '{siteName}' },
                    { hint: 'Divider'|t('sprout'), name: '{divider}' }
                ]
                }
            ],
            value: settings.appendTitleValue is defined ? settings.appendTitleValue : null,
            placeholder: '{siteName}'|t('sprout')
        }) }}

        {{ forms.lightswitchField({
            label: "Display Append Meta Title Value on Homepage"|t('sprout'),
            instructions: "Enable this setting to display the Append Meta Title value for your Homepage."|t('sprout'),
            name: 'sproutseo[globals][settings][appendTitleValueOnHomepage]',
            on: settings.appendTitleValueOnHomepage is defined ? settings.appendTitleValueOnHomepage : null,
            onLabel: "Enable"|t
        }) }}

        <hr>

        {% set ogTypesOptions = {
            '' : 'Select Open Graph Type...'|t('sprout'),
            'article' : 'Article'|t('sprout'),
            'website' : 'Website'|t('sprout'),
        } %}

        {{ forms.selectField({
            label: 'Default Open Graph Type'|t('sprout') ~ sproutMetaCp.infoIcon({
                label: "Type"|t('sprout'),
                openGraph: true,
                priority: 'globals'
            }),
            instructions: 'Select your default Open Graph Type for individual entries using the Sprout SEO Optimize field. Learn more about <a href="https://developers.facebook.com/docs/reference/opengraph#object-type" target="_blank">How Open Graph Stories work.</a>'|t('sprout'),
            name: 'sproutseo[globals][settings][defaultOgType]',
            options: ogTypesOptions,
            value: settings.defaultOgType ?? 'article',
            errors: "",
            required: false
        }) }}

        {% set twitterCardOptions = {
            '' : 'Select Twitter Card Type...'|t('sprout'),
            'summary' : 'Summary Card'|t('sprout'),
            'summary_large_image' : 'Summary Card with Large Image'|t('sprout')
        } %}

        {{ forms.selectField({
            label: 'Default Twitter Card Type'|t('sprout') ~ sproutMetaCp.infoIcon({
                label: "Type"|t('sprout'),
                twitterCard: true,
                priority: 'globals'
            }),
            instructions: 'Select your default Twitter Card Type for individual entries using the Sprout SEO Optimize field.. Learn more about <a href="https://dev.twitter.com/docs/cards" target="_blank">How Twitter Cards work</a>.'|t('sprout'),
            name: 'sproutseo[globals][settings][defaultTwitterCard]',
            options: twitterCardOptions,
            value: settings.defaultTwitterCard ?? 'summary',
            errors: "",
            required: false
        }) }}

        {{ forms.selectField({
            label: 'Default Open Graph Image Transform'|t('sprout') ~ sproutMetaCp.infoIcon({
                label: "Type"|t('sprout'),
                openGraph: true,
                priority: 'globals'
            }),
            instructions: 'Select Image Transforms for the facebook image. Use images that are at least 1200 x 630 pixels for the best display on high resolution devices. Images larger than 600px by 315px will display as large images. The minimum image size is 200px by 200px pixels. Images can be up to 8MB in size.'|t('sprout'),
            name: 'sproutseo[globals][settings][ogTransform]',
            options: transformOptions,
            value: settings.ogTransform ?? 'sproutSeo-socialSquare',
            errors: "",
            required: false
        }) }}

        {{ forms.selectField({
            label: 'Default Twitter Card Image Transform'|t('sprout') ~ sproutMetaCp.infoIcon({
                label: "Type"|t('sprout'),
                twitterCard: true,
                priority: 'globals'
            }),
            instructions: 'Select Image Transforms for the Twitter Card image. Summary Card image is square and must be a minimum of 120px by 120px. Summary Card with Large Image should be at least 280px in width, and at least 150px in height. Images must be less than 1MB in size.'|t('sprout'),
            name: 'sproutseo[globals][settings][twitterTransform]',
            options: transformOptions,
            value: settings.twitterTransform ?? 'sproutSeo-socialSquare',
            errors: "",
            required: false
        }) }}

        <hr>

        <div class="buttons">
            <input type="submit" class="btn submit" value="Save"/>
        </div>

    </form>

    {% js %}
        $(document).ready(function() {
        Craft.SproutFields.initFields($("#content"));
        });
    {% endjs %}

{% endblock %}
