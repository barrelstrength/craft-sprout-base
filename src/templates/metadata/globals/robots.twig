{% extends "sprout/metadata/_layouts/general" %}
{% import "_includes/forms" as forms %}
{% import "sprout/metadata/_includes/sproutseo" as sproutMetaCp %}

{% set sproutBaseApp = craft.app.getModule('sprout').app %}

{% set robots = sproutBaseApp.optimize.prepareRobotsMetadataForSettings(globals.robots) %}

{% block content %}

    <form method="post" accept-charset="UTF-8" data-saveshortcut>
        {{ csrfInput() }}
        <input type="hidden" name="action"
            value="sprout/global-metadata/save-global-metadata">
        <input type="hidden" name="globalColumn" value="robots">
        <input type="hidden" name="siteId" value="{{ globals.siteId }}">

        {% set robotsContext = 'globals' %}
        {% set robotsNamespace = 'sproutseo[globals][robots]' %}
        {% include "sprout/metadata/_components/fields/elementmetadata/blocks/robots" %}

        <hr>

        <div class="buttons">
            <input type="submit" class="btn submit" value="Save"/>
        </div>

    </form>

{% endblock %}