{% extends "sprout/reports/_layouts/elementindex" %}
{% import "sprout/config/_includes/sproutcp" as sproutCp %}

{% do view.registerAssetBundle("barrelstrength\\sproutbase\\web\\assetbundles\\sproutcp\\SproutCpAsset") %}

{% set title = "Reports"|t('sprout') %}

{% set elementType = 'barrelstrength\\sproutbase\\app\\reports\\elements\\Report' %}

{% block actionButton %}

    {% if currentUser.can(editReportsPermission) %}

        {% if newReportOptions|length > 1 %}
            <div class="btngroup submit first">
                <a class="btn submit add icon"
                    href="{{ newReportOptions[0].url }}">{{ "New Report"|t('sprout') }}</a>
                {% if dataSources %}
                    <div class="btn submit menubtn"></div>
                    <div class="menu">
                        <ul>
                            {% for option in newReportOptions %}
                                <li><a class="formsubmit"
                                        href="{{ option.url }}">{{ option.name }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
            </div>
        {% else %}
            <div class="btngroup submit first">
                {% if newReportOptions[0] is defined %}
                    <a class="btn submit add icon" href="{{ newReportOptions[0].url }}">{{ "New Report"|t('sprout') }}</a>
                {% endif %}
            </div>
        {% endif %}

        {% if not config.getDisableUpgradeMessages() and not config.getIsPro() %}
            {{ sproutCp.upgradeToProButton({
                url: config.getUpgradeUrl(),
                title: "Upgrade to Sprout Reports PRO to access unlimited data sources and create visualizations."|t('sprout')
            }) }}
        {% endif %}

    {% endif %}

{% endblock %}

{% block sidebar %}

    {{ parent() }}

    <div class="buttons">
        <div id="newgroupbtn"
            class="btn add icon">{{ "New Group"|t('sprout') }}</div>

        {% if groupId is defined %}
            <div id="groupsettingsbtn" class="btn settings icon menubtn"
                title="{{ 'Settings' }}"></div>
            <div class="menu">
                <ul>
                    <li><a data-action="rename"
                            role="button">{{ "Rename selected group"|t('sprout') }}</a>
                    </li>
                    <li><a data-action="delete"
                            role="button">{{ "Delete selected group"|t('sprout') }}</a>
                    </li>
                </ul>
            </div>
        {% endif %}
    </div>

{% endblock %}

{% do view.registerAssetBundle("barrelstrength\\sproutbase\\web\\assetbundles\\groups\\GroupsAsset") %}

{% block initJs %}

    {{ parent() }}

    new Craft.SproutBase.GroupsAdmin({
    groupsSelector: '#sidebar nav ul',
    newGroupButtonSelector: '#newgroupbtn',
    groupSettingsSelector: '#groupsettingsbtn',

    newGroupAction: 'sprout/reports/save-group',
    newGroupOnSuccessUrlBase: 'sprout/reports',
    newGroupOnErrorMessage: Craft.t('sprout', 'Could not create the group:'),

    renameGroupAction: 'sprout/reports/save-group',
    renameGroupOnSuccessMessage: Craft.t('sprout', 'Group renamed.'),
    renameGroupOnErrorMessage: Craft.t('sprout', 'Could not rename the group:'),

    promptForGroupNameMessage: Craft.t('sprout', 'What do you want to name your group?'),

    deleteGroupAction: 'sprout/reports/delete-group',
    deleteGroupOnSuccessUrl: 'sprout/reports',
    deleteGroupConfirmMessage: Craft.t('sprout', 'Are you sure you want to delete this group and all its reports?'),
    deleteGroupOnErrorMessage: Craft.t('sprout', 'Could not delete the group.'),
    });

{% endblock %}
