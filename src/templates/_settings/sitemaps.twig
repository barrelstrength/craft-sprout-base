{% import "_includes/forms" as forms %}

{% macro configWarning(setting) -%}
    {{ "This is being overridden by the {setting} config setting."|t('sprout-forms-google-recaptcha', {
        setting: setting
    })|raw }}
{%- endmacro %}

{% from _self import configWarning %}

{{ forms.textField({
    label: "Total Elements Per Sitemap"|t('sprout'),
    instructions: "The number of items that display on each page of your sitemap. A lower number may be necessary for sitemaps with a large number of elements or limited server resources."|t('sprout'),
    name: 'totalElementsPerSitemap',
    placeholder: '500',
    size:'10',
    value: settings.totalElementsPerSitemap,
    errors: '',
    warning: config.totalElementsPerSitemap is defined ? configWarning('totalElementsPerSitemap'),
    first: true
}) }}

{{ forms.lightswitchField({
    label: "Enable Custom Pages"|t,
    instructions: "Add a section on the Sitemaps tab to manage Custom Pages that exist outside of any URL-Enabled Sections."|t,
    name: 'enableCustomSections',
    on: (settings.enableCustomSections is empty ? false : true),
    onLabel: "Enable"|t,
    warning: config.enableCustomSections is defined ? configWarning('enableCustomSections')
}) }}

