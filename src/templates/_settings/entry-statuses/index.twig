{% set tableData = [] %}
{% if entryStatuses|length %}
    {% for entryStatus in entryStatuses %}

        {% set cpEditUrl = cpUrl('sprout/settings/forms/entry-statuses/' ~ entryStatus.id) %}
        {% set showDelete = entryStatus.isDefault or entryStatus.handle == 'spam' ? false : true %}

        {% set tableData = tableData|merge([{
            id: entryStatus.id,
            labelHtml: {
                url: cpEditUrl,
                color: entryStatus.color,
                name: entryStatus.name
            },
            title: entryStatus.name|t('sprout')|e,
            url: cpEditUrl,
            handle: entryStatus.handle,
            isDefault: entryStatus.isDefault,
            _showDelete: showDelete
        }]) %}

    {% endfor %}
{% endif %}

<h2>{{ "Entry Statuses"|t('sprout') }}</h2>
<p>{{ "Define the statuses that can be set on form entries once they’ve been completed."|t('sprout') }}</p>

<div id="entry-statuses-admin-table"></div>

{% do view.registerAssetBundle('craft\\web\\assets\\admintable\\AdminTableAsset') -%}

{% js %}
    var columns = [
    {
    name: 'labelHtml',
    title: Craft.t('sprout', 'Name'),
    callback: function(value) {
    return '<a class="cell-bold sproutFormsStatusLabel" href="' + value.url + '"><span class="status ' + value.color + '"></span>' + value.name + '</a>';
    }
    },
    {
    name: '__slot:handle',
    title: Craft.t('sprout', 'Handle')
    },
    {
    name: 'isDefault',
    title: Craft.t('sprout', 'Default Status'), callback: function(value) {
    if (value) {
    return '<span data-icon="check" title="' + Craft.t('sprout', 'Yes') + '"></span>';
    }
    return '';
    }
    }
    ];

    new Craft.VueAdminTable({
    columns: columns,
    container: '#entry-statuses-admin-table',
    deleteAction: 'sprout/form-entry-statuses/delete',
    deleteConfirmationMessage: Craft.t('sprout', "Are you sure you want to delete the Entry Status “{name}”?"),
    deleteSuccessMessage: Craft.t('sprout', "Entry status deleted"),
    deleteFailMessage: Craft.t('sprout', "Unable to delete status. Status must not be used on existing entries."),
    emptyMessage: Craft.t('sprout', 'No entry statuses exist yet.'),
    minItems: 2,
    padded: true,
    reorderAction: 'sprout/form-entry-statuses/reorder',
    reorderSuccessMessage: Craft.t('sprout', 'Entry statuses reordered.'),
    reorderFailMessage: Craft.t('sprout', 'Couldn’t reorder statuses.'),
    tableData: {{ tableData|json_encode|raw }}
    });
{% endjs %}
