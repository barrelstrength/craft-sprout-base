{% import "_includes/forms" as forms %}

{{ forms.checkboxField({
    label: "When entry is created?"|t('sprout'),
    name: "whenNew",
    checked: event.whenNew
}) }}

{{ forms.checkboxField({
    label: "When entry is updated?"|t('sprout'),
    name: "whenUpdated",
    checked: event.whenUpdated
}) }}

{{ forms.field({
    label: "Forms <span class='info'>Select which forms will trigger this notification</span>"|t('sprout'),
    errors: event is defined ? event.getErrors('formIds') : null,
}, forms.checkboxGroup({
    name: "formIds",
    options: event.availableForms,
    values: event.formIds,
    showAllOption: true
})) }}