{% extends "sprout-base-config/_layouts/base-landing" %}
{% import "sprout-base-config/_includes/sproutcp" as sprout %}

{% set title = "Upgrade to Sprout SEO PRO"|t('sprout') %}
{% set bodyClass = 'sprout-landing-page' %}
{% set assetUrl = view.getAssetManager().getPublishedUrl('@sproutbase/app/metadata/web/assets/seo/dist', true) -%}
{% set pluginStoreLink = currentUser.admin ? cpUrl('plugin-store/sprout-seo') : 'https://plugins.craftcms.com/sprout-seo' %}

{% block content %}

    <div class="sprout-landing">

        {{ parent() }}

        {{ sprout.featureHeader({
            heading: "Smart, content-driven SEO"|t('sprout'),
            message: "Sprout SEO [pro] opens the door to fine-grained control of your SEO strategy and workflows. Customize multiple Metadata fields, manage redirects, and generate sitemaps."|t('sprout'),
            primaryButtonText: "Upgrade Now"|t('sprout'),
            primaryButtonLink: pluginStoreLink,
            secondaryButtonText: "Learn More"|t('sprout'),
            secondaryButtonLink: "https://sprout.barrelstrengthdesign.com/docs/seo"
        }) }}

        {{ sprout.featureImage({
            imageUrl: assetUrl ~ '/images/sproutseo-feature.png',
            altText: 'Content-focused SEO for Craft CMS'|t('sprout')
        }) }}

    </div>

{% endblock %}