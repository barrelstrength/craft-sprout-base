{% import "_includes/forms" as forms %}

{{ forms.textField({
    label: "Placeholder Text"|t('sprout'),
    instructions: "The text that will be shown if the field doesnâ€™t have a value."|t('sprout'),
    id: 'placeholder',
    name: 'placeholder',
    value: field.placeholder
}) }}

{{ forms.checkboxField({
    label: "Email Addresses for this field have their own validation pattern"|t('sprout'),
    name: 'customPatternToggle',
    checked: field.customPatternToggle,
    toggle: 'sproutemailfield-custom-validation-pattern'
}) }}

<div id="sproutemailfield-custom-validation-pattern" {% if not field.customPatternToggle %}class="hidden"{% endif %}>
    {{ forms.textField({
        label: 'Validation Pattern'|t('sprout'),
        instructions: 'Validate email addresses using this regular expression.'|t('sprout'),
        name: 'customPattern',
        placeholder: '(.*)@example.com$',
        value: field.customPattern
    }) }}

    {{ forms.textField({
        label: 'Error Message'|t('sprout'),
        instructions: 'Display this error message when an email address is invalid.'|t('sprout'),
        name: 'customPatternErrorMessage',
        placeholder: 'Must be a valid email address from example.com',
        value: field.customPatternErrorMessage
    }) }}
</div>

<hr>

{{ forms.lightswitchField ({
    label: "Require email address to be unique"|t('sprout'),
    instructions: "Duplicate email addresses saved to this field will not be allowed."|t('sprout'),
    name: 'uniqueEmail',
    on: field.uniqueEmail,
}) }}
