{% import "_includes/forms" as forms %}
{% import "sprout-base-fields/_includes/forms" as sproutFields %}

{% macro configWarning(setting) -%}
    {{ "This is being overridden by the {setting} config setting."|t('sprout', {
        setting: setting
    })|raw }}
{%- endmacro %}

{% from _self import configWarning %}

{{ forms.lightswitchField({
    label: "Enable Notifications?"|t('sprout'),
    instructions: "Disable Notifications to remove them from the sidebar navigation and make them no longer accessible in the Control Panel."|t('sprout'),
    name: 'enableNotificationEmails',
    on: settings.enableNotificationEmails,
    warning: config.enableNotificationEmails is defined ? configWarning('enableNotificationEmails'),
    first: true
}) }}

{% set templateOptions = craft.sproutEmail.getEmailTemplateOptions() %}

{{ forms.field({
    label: "Default Email Templates"|t('sprout'),
    required: true,
    errors: (settings is defined ? settings.getErrors('emailTemplateId') :
    null),
    instructions: "The templates that will be used to display your Notification Emails. Add additional Email Templates via the Email Templates API or providing a custom path to your email templates folder."|t('sprout'),
    warning: config.emailTemplateId is defined ? configWarning('emailTemplateId')
}, sproutFields.selectOther({
    name: 'emailTemplateId',
    options: templateOptions,
    value: settings.emailTemplateId ?? null,
    otherPlaceholderText: '_email/email-templates-folder'|t('sprout')
})) }}

{{ forms.lightswitchField({
    label: "Enable custom Email Templates on a per-email basis"|t('sprout'),
    instructions: "Allow admins to (optionally) choose custom Email Templates for each email created. Enabling this setting will display the Email Template dropdown field for every Notification Email Element."|t('sprout'),
    id: 'enablePerEmailEmailTemplateIdOverride',
    name: 'enablePerEmailEmailTemplateIdOverride',
    on: settings.enablePerEmailEmailTemplateIdOverride,
    onLabel: "Enable"|t('sprout'),
    warning: config.enablePerEmailEmailTemplateIdOverride is defined ? configWarning('enablePerEmailEmailTemplateIdOverride')
}) }}