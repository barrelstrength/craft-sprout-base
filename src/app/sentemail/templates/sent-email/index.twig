{% extends "sprout-base-sent-email/_layouts/elementindex" %}
{% import 'sprout-base/_includes/sproutcp' as sprout %}

{% do view.registerAssetBundle("barrelstrength\\sproutbase\\config\\web\\assets\\cp\\CpAsset") %}

{% set title = "Sent Email"|t('sprout') %}
{% set elementType = 'barrelstrength\\sproutbase\\app\\sentemail\\elements\\SentEmail' %}

{% block actionButton %}

    {% if not isPro %}
        <div class="buttons">
            {{ sprout.upgradeToProButton({
                url: cpUrl('sprout/upgrade/sent-email'),
                title: "Upgrade to Sprout Sent Email PRO to manage Resend Emails"|t('sprout')
            }) }}
        </div>
    {% endif %}

{% endblock %}

{% block sidebar %}

    {% set customizableSources = false %}

    {{ parent() }}

{% endblock %}

{% block content %}

    {{ parent() }}

    {% include "sprout-base-email/_modals/base" %}

{% endblock %}