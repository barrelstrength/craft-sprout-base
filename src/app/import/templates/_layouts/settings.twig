{% extends "_layouts/cp" %}

{% set title  = "Settings" %}

{% set subnav = {
    index: {
        label: "Import"|t('sprout-base'),
        url: url('sproutimport/index')
    },
    seed: {
        label: "Seed"|t('sprout-base'),
        url: url('sproutimport/seed')
    },
    weed: {
        label: "Weed"|t('sprout-base'),
        url: url('sproutimport/weed')
    },
    settings: {
        label: "Settings"|t('sprout-base'),
        url: url('sproutimport/settings/general')
    }
} %}

{% set selectedSubnavItem = craft.app.request.getSegment(2) %}
{% set selectedSidebarItem = craft.app.request.getSegment(3) %}

{% set sidebar %}

    <nav class="last">
        <ul>
            <li><a href="{{ url('sproutimport/settings/general') }}"
                   {% if selectedSidebarItem == 'general' %}class="sel"{% endif %}>{{ "General"|t('sprout-base') }}</a>
            </li>

            <li class="heading">
                <span>{{ "Integrations"|t('sprout-base') }}</span></li>

            <li><a href="{{ url('sproutimport/settings/seo') }}"
                   {% if selectedSidebarItem == 'seo' %}class="sel"{% endif %}>SEO</a>

            </li>
        </ul>
    </nav>

{% endset %}
